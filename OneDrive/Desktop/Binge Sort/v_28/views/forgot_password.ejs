<%- include("./partials/header") %>

<div class="row">
  <div class="col-sm-4 offset-sm-4 mt-5">
    <div class="card">
      <div class="card-header">
        <center>
          <i class="fa fa-lock fa-5x" aria-hidden="true"></i>
          <h1>Forgot Password?</h1>
          <p>You can reset your password here.</p>
        </center>
        <form action="/forgot_password" method="POST">
          <div class="container">
            <div class="col">
              <div class="input-group margin-bottom-sm">
                <span class="input-group-addon"><i class="fa fa-envelope fa-lg fa-2x" aria-hidden="true" style="padding-right:5px; padding-top:2px;"></i></span>
                <input type="email" class="form-control" name="email" placeholder="Email Address">
              </div>
            </div>
          </div>
          <div class="col-sm-10 offset-sm-1 mt-4">
            <button type="submit" class="btn btn-lg btn-primary btn-block" name="button"><strong>Submit</strong></button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<br>
    
<script type="text/javascript">
  document.querySelector("body").classList.remove("body_bg");
</script>

<%- include("./partials/footer") %>
