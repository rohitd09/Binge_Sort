<%- include("./../partials/header") %>

<div class="jumbotron jumbotron-fluid" style="background-color: #111112; color: white;">
  <div class="container">
    <div class="row">
      <div class="col-xs-7 col-md-8">
        <h1 class="display-4"><i class="fa fa-television" title="Align Justify"></i> All Shows</h1>
      </div>
      <div class="col-xs-5 col-md-4 d-flex justify-content-end mt-0">
        <button type="button" class="btn btn-light btn-lg" data-toggle="modal" data-target="#exampleModal">
          <i class="fa fa-filter fa-lg" aria-hidden="true"></i> <strong>Filter</strong>
        </button>
      </div>
    </div>
    <p class="lead">Make your own customised database</p>
  </div>
</div>


  <div class="card">
    <div class="container">
      <div class="card-header">
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel"><strong>Filter Shows</strong></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <form action="/all_show" method="POST">
                <div class="modal-body">
                  <div class="row">
                    <div class="col-12">
                      <div class="row">
                        <div class="col-5">
                          <input type="checkbox" class="" name="genre" value="Action">  Action and Adventure
                        </div>
                        <div class="col-4">
                          <input type="checkbox" class="" name="genre" value="Comedy">  Comedy
                        </div>
                        <div class="col-3">
                          <input type="checkbox" class="" name="genre" value="Romance">  Romance
                        </div>
                      </div>
                    </div>
                    <div class="col-12">
                      <div class="row">
                        <div class="col-5">
                          <input type="checkbox" class="" name="genre" value="Fantasy">  Fantasy
                        </div>
                        <div class="col-4">
                          <input type="checkbox" class="" name="genre" value="Horror">  Horror
                        </div>
                        <div class="col-3">
                          <input type="checkbox" class="" name="genre" value="Mystery">  Mystery
                        </div>
                      </div>
                    </div>
                    <div class="col-12">
                      <div class="row">
                        <div class="col-5">
                          <input type="checkbox" class="" name="genre" value="Drama">  Drama
                        </div>
                        <div class="col-4">
                          <input type="checkbox" class="" name="genre" value="Sci-fi">  Sci-fi
                        </div>
                        <div class="col-3">
                          <input type="checkbox" class="" name="genre" value="Military">  Military
                        </div>
                      </div>
                    </div>
                    <div class="col-12">
                      <div class="row">
                        <div class="col-5">
                          <input type="checkbox" class="" name="genre" value="Documentary">  Documentary
                        </div>
                        <div class="col-4">
                          <input type="checkbox" class="" name="genre" value="Parodies">  Parodies
                        </div>
                        <div class="col-3">
                          <input type="checkbox" class="" name="genre" value="Anime">  Anime
                        </div>
                      </div>
                    </div>
                    <div class="col-12">
                      <div class="row">
                        <div class="col-5">
                          <input type="checkbox" class="" name="genre" value="History">  History
                        </div>
                        <div class="col-4">
                          <input type="checkbox" class="" name="genre" value="Thriller">  Thriller
                        </div>
                        <div class="col-3">
                          <input type="checkbox" class="" name="genre" value="Political">  Political
                        </div>
                      </div>
                    </div>
                    <div class="col-12">
                      <div class="row">
                        <div class="col-5">
                          <input type="checkbox" class="" name="genre" value="Animation">  Animation
                        </div>
                        <div class="col-4">
                          <input type="checkbox" class="" name="genre" value="Crime">  Crime
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <hr>
                <input type="checkbox" class="ml-3" name="check" value="1"> Filter All Selected
                <div class="modal-footer">
                  <button type="butto" class="btn btn-secondary" data-dismiss="modal"><strong>Close</strong></button>
                  <button type="submit" class="btn btn-primary"><strong>Save changes</strong></button>
                </div>
              </form>
            </div>
          </div>
        </div>
        <% var flag = 0 %>
        <% for(i = 65; i <= 90; i++){ %>
          <div class="row">
            <% television.forEach(function(tv) { %>
              <% if(tv.show_name.charCodeAt(0) == i || tv.show_name.charCodeAt(0) == i + 32){ %>
                <% if(flag != i){ %>
                  <h1 class="col-12"><%= String.fromCharCode(i) %></h1>
                  <% flag = i %>
                <% } %>
                <div class="col-lg-3 col-md-4 col-sm-12 col-xs-12">
                  <a href="/show/<%= tv._id %>">
                    <div class="card-deck">
                      <div class="card">
                        <img height="155px" src="./uploads/<%= tv.image %>" class="card-img-top" alt="<%= tv.show_name %> image">
                        <div class="card-body">
                          <h5 class="card-title"><%= tv.show_name %></h5>
                        </div>
                      </div>
                    </div>
                  </a>
                </div>
              <% } %>
            <% }) %>
          </div>
        <% } %>
      </div>
    </div>
  </div>
</div>

<%- include("./../partials/footer") %>
